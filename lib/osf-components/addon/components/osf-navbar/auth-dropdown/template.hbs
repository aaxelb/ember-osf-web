{{#if (not this.session.isAuthenticated) }}
    <li class='sign-in'>
        <div>
            <Link data-test-sign-up
                @route={{this.signUpRoute}}
                @queryParams={{this.signUpQueryParams}}
                @onclick={{action 'click' 'button' 'Navbar - SignUp' target=this.analytics}}
                class='btn btn-success btn-top-signup m-l-sm m-r-xs'
            >
                {{t 'auth_dropdown.sign_up'}}
            </Link>
            <a {{action 'login'}} data-test-sign-in-button onclick={{action 'click' 'button' 'Navbar - SignIn' target=this.analytics}} class="btn btn-info btn-top-login m-r-xs" role="button">
                {{t 'auth_dropdown.sign_in'}}
            </a>
        </div>
    </li>
{{else}}
    {{#bs-dropdown tagName='li' classNames='dropdown secondary-nav-dropdown' as |dd|}}
        {{#dd.toggle classNames='btn-link'}}
            <div class="osf-profile-image">
                <img src="{{this.user.profileImage}}&s=25" alt="{{t 'auth_dropdown.user_gravatar'}}">
            </div>
            <div class='nav-profile-name'>{{this.user.fullName}}</div>
            <span class="caret"></span>
        {{/dd.toggle}}

        {{#dd.menu classNames='auth-dropdown' local-class='AuthDropdown' as |ddm|}}
            {{#if this.headline}}
                {{#ddm.item (html-attributes role='none') local-class='Headline'}}
                    {{this.headline}}
                {{/ddm.item}}
            {{/if}}
            {{#ddm.item (html-attributes role='menuitem')}}
                <a href="{{this.profileURL}}" onclick={{action '_onLinkClicked' 'Navbar - MyProfile'}}>
                    <i class="fa fa-user fa-lg p-r-xs"></i>
                    {{t 'auth_dropdown.my_profile'}}
                </a>
            {{/ddm.item}}
            {{#ddm.item (html-attributes role='menuitem')}}
                {{#global-link-to 'support' click=(action '_onLinkClicked' 'Navbar - Support')}}
                    <i class="fa fa-life-ring fa-lg p-r-xs"></i>
                    {{t 'auth_dropdown.osf_support'}}
                {{/global-link-to}}
            {{/ddm.item}}
            {{#ddm.item (html-attributes role='menuitem')}}
                <a href="{{this.settingsURL}}" onclick={{action '_onLinkClicked' 'Navbar - Settings'}}>
                    <i class="fa fa-cog fa-lg p-r-xs"></i>
                    {{t 'general.settings'}}
                </a>
            {{/ddm.item}}
            {{#ddm.item (html-attributes role='menuitem')}}
                <a class="logoutLink" role="button" {{action 'logout'}} {{action '_onLinkClicked' 'Navbar - Logout'}}>
                    <i class="fa fa-sign-out fa-lg p-r-xs"></i>
                    {{t 'auth_dropdown.log_out'}}
                </a>
            {{/ddm.item}}
        {{/dd.menu}}
    {{/bs-dropdown}}
{{/if}}
