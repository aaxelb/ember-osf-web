<Navbar @dark={{true}} as |nav|>
    <nav.container>
        {{! Left Side (Brand, Service Dropdown) }}
        <nav.section data-test-left>
            <Link data-test-brand
                  @route='home'
                  aria-label={{t 'navbar.go_home'}}
            >
                <div local-class="Logo"></div>
            </Link>

            {{#bs-dropdown as |dd|}}
                <dd.toggle data-test-service local-class='Service Dropdown'>
                    <span local-class="HideOnMobile">{{t 'general.OSF'}}</span>
                    <strong>{{t 'general.services.registries'}}</strong>
                    {{nav.icon (if dd.isOpen 'caret-up' 'caret-down')}}
                </dd.toggle>

                <dd.menu data-test-service-list local-class='ServiceDropdownMenu DropdownMenu' as |ddm|>
                    {{#each this.services as |service|}}
                        <ddm.item role="menuitem">
                            {{#hyper-link service.route}}
                                <strong local-class="ServiceDropdownEntry">{{service.name}}</strong>
                            {{/hyper-link}}
                        </ddm.item>
                    {{/each}}
                </dd.menu>
            {{/bs-dropdown}}
        </nav.section>

        {{! Right Side (Search, Buttons, Gravatar, Dropdown) }}
        <nav.section data-test-right>
            <nav.item local-class='HideOnMobile SearchBar' data-test-search-bar="1">
                {{icon-input 'search' dark=true enter=(action '_onSearch')}}
            </nav.item>

            <nav.links.secondary local-class='HideOnMobile' href={{this.helpHref}} data-test-help="1">
                <h4>{{t 'general.help'}}</h4>
            </nav.links.secondary>

            <nav.links.primary local-class='HideOnMobile' href={{this.donateHref}} data-test-donate="1">
                <h4>{{t 'navbar.donate'}}</h4>
            </nav.links.primary>

            {{#if (not this.session.isAuthenticated)}}

                <nav.divider local-class='HideOnMobile' />
                <nav.links.secondary
                    @route={{this.signUpRoute}}
                    @queryParams={{this.signUpQueryParams}}
                    data-test-join="1"
                >
                    <h4>{{t 'navbar.join'}}</h4>
                </nav.links.secondary>

                <nav.buttons.secondary @onclick={{action 'login'}} data-test-login="1">
                    <h4>{{t 'navbar.login'}}</h4>
                </nav.buttons.secondary>

            {{else}}

                {{#bs-dropdown classNames=(local-class 'AuthDropdown') as |dd|}}
                    <dd.toggle local-class='Dropdown'>
                        <img data-test-gravatar alt="{{t 'auth_dropdown.user_gravatar'}}" local-class="Gravatar" src="{{this.currentUser.user.profileImage}}&s=30">
                        {{nav.icon (if dd.isOpen 'caret-up' 'caret-down')}}
                    </dd.toggle>

                    <dd.menu data-test-auth-dropdown
                        class='dropdown-menu-right'
                        local-class='AuthDropdownMenu DropdownMenu'
                        as |ddm|
                    >
                        <ddm.item role="menuitem">
                            <a href="{{this.profileURL}}" onclick={{action 'click' 'link' 'Navbar - MyProfile' target=this.analytics}}>
                                {{fa-icon 'user' fixedWidth=true}}
                                {{t 'auth_dropdown.my_profile'}}
                            </a>
                        </ddm.item>
                        <ddm.item role="menuitem">
                            {{#global-link-to 'support' click=(action 'click' 'link' 'Navbar - Support' target=this.analytics)}}
                                {{fa-icon 'life-ring' fixedWidth=true}}
                                {{t 'auth_dropdown.osf_support'}}
                            {{/global-link-to}}
                        </ddm.item>
                        <ddm.item role="menuitem">
                            <a href="{{this.settingsURL}}" onclick={{action 'click' 'link' 'Navbar - Settings' target=this.analytics}}>
                                {{fa-icon 'cog' fixedWidth=true}}
                                {{t 'general.settings'}}
                            </a>
                        </ddm.item>
                        <ddm.item role="menuitem">
                            <a class="logoutLink" {{action 'logout'}} onclick={{action 'click' 'button' 'Navbar - Logout' target=this.analytics}} role="button">
                                {{fa-icon 'sign-out' fixedWidth=true}}
                                {{t 'auth_dropdown.log_out'}}
                            </a>
                        </ddm.item>
                    </dd.menu>
                {{/bs-dropdown}}

            {{/if}}

        </nav.section>
    </nav.container>
</Navbar>

<Container data-test-search-bar-mobile="1" local-class="SearchDropdown {{if (media 'isMobile') '' 'Closed'}}">
    {{icon-input 'search' dark=true enter=(action '_onSearch')}}
</Container>

