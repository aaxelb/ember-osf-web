{{quickfile-nav user=model onQuickfiles=true}}
<div class='container'>
    {{title (t 'quickfiles.title' user-name=model.fullName)}}

    <div class='Content container'>
        {{#if canEdit}}
            <h5><i>{{t 'quickfiles.description'}}</i></h5>
        {{else}}
            <div style='height:14px;'></div>
        {{/if}}
        {{file-browser user=model openFile=(action 'openFile') dropZoneId='quickfiles-dropzone'}}
    </div>
</div>

{{feedback-button text=(t 'quickfiles.feedback_dialog_text') pageName=pageName}}
